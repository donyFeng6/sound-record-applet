/* src/pages/myRecord.wxss */
@import '../static/css/global.wxss';
.m-sharen-Sheet .con{width: 90vw; position: absolute; top: auto; left: 5vw; bottom:3vh; background-color: transparent;}
.m-sharen-Sheet .con .item{ margin-bottom: .8rem; border-radius:12px; overflow: hidden; background-color: #FFF;}
.m-sharen-Sheet .con .item .btn{display: block; height: 2.2rem; line-height: 2.2rem; border-top: 1px solid rgba(77, 77, 77, 0.2); border-radius: 0; font-size: .9rem; color:#1B5AC8;}
.m-sharen-Sheet .con .item .btn:first-child{border: 0;}
.m-sharen-Sheet .con .item .btn .icon{width: 1rem;height: 1rem; margin-right: .2rem;}
.m-sharen-Sheet .con .item .btn.del{color:#F94747;}
.m-sharen-Sheet .con .item .btn.miff .icon{position: relative; top: 3px; width:1rem;height:1.2rem;}
.m-sharen-Sheet .con .close{display: block; padding: 3px 0; border-radius:12px; font-size: .9rem; color:#1B5AC8;}